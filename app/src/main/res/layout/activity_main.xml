<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@android:drawable/bottom_bar"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:gravity="center"
                android:padding="10sp"
                android:text="Department of Computer Sciences \nBaba Ghulam Shah Badshah University Rajouri - Jammu and Kashmir"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed-light" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="191dp"
                android:layout_gravity="center"
                android:background="@color/common_google_signin_btn_text_dark_default"
                app:srcCompat="@drawable/csdptfrontview" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:gravity="center"
                android:padding="10sp"
                android:text="“Computer Science is no more about computers than astronomy is about telescopes.” — Edsger W. Dijkstra"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:fontFamily="casual" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/divider_horizontal_textfield"
                android:paddingLeft="8sp"
                android:text="Menu | Scroll Up | "
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                style="@style/TextAppearance.AppCompat.Menu"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:capitalize="none"
                android:drawableLeft="?attr/actionModePasteDrawable"
                android:onClick="btnNoticeBoard"
                android:text="NOTICE BOARD"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:drawableLeft="@android:drawable/ic_menu_agenda"
                android:onClick="btnSyllabus"
                android:text="Syllabus"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_disabled"
                android:onClick="btnGoogleClassroom"
                android:text="Google Classroom"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                android:onClick="btnLearningRes"
                android:text="Learning Resources"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginBottom="10sp"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:onClick="btnResult"
                android:text="Results"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:onClick="btnContact"
                android:text="Contact us"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/bottom_bar"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>